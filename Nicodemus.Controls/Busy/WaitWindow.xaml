<controls:ChildWindow x:Class="Nicodemus.Controls.Busy.WaitWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="255" Height="70" 
           Title="The system is busy" HasCloseButton="False">
    <Grid x:Name="LayoutRoot" Margin="2">
        <TextBlock x:Name="MessageBox" Grid.Row="0" Text="Processing your request. Please hold on." Canvas.ZIndex="-4" />
    </Grid>
</controls:ChildWindow>